---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BaseHead from "../components/BaseHead.astro";

export interface Props {
  title: string;
  desc: string;
  thumbnail: string;
  pageTitle: string;
}

const { pageTitle, desc, thumbnail, title } = (Astro.props.content ||
  Astro.props) as Props;
---

<!DOCTYPE html>
<html lang="en">
  <BaseHead description={desc} title={pageTitle} image={thumbnail} />

  <body
    class="bg-white dark:bg-neutral-900 text-neutral-900 dark:text-neutral-100"
  >
    <Header blogName={title} />
    <div
      class="max-w-3xl mx-auto flex flex-col items-center h-full px-4 min-h-screen pt-20"
    >
      <slot />
    </div>
    <Footer />
  </body>
</html>
